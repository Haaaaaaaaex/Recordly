<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddScheduleActivity"
    android:id="@+id/schedID"
    android:background="@color/white">

    <include
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/actionbar"
        />


    <TextView
        android:id="@+id/Sched_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:gravity="center"
        android:text="ADD SCHEDULE"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/course_subject"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Sched_title"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/text_bg"
        android:hint="Enter course subject"
        android:textColorHint="@color/Grey"
        android:padding="10dp"
        android:paddingLeft="5dp"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/section_name"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/course_subject"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:textColorHint="@color/Grey"
        android:textColor="@color/black"
        android:background="@drawable/text_bg"
        android:hint="Enter class section"
        android:padding="10dp"
        android:paddingLeft="5dp" />

    <TextView
        android:id="@+id/schedule_time"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Sched_title"
        android:layout_alignLeft="@+id/Sched_title"
        android:layout_marginLeft="10dp"

        android:layout_marginTop="140dp"
        android:layout_marginRight="-245dp"
        android:layout_toLeftOf="@id/Sched_title"
        android:background="@drawable/text_bg"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="25dp" />


    <TextView
        android:id="@+id/schedule_time_end"
        android:layout_width="232dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/schedule_time"

        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="-245dp"
        android:layout_toLeftOf="@id/Sched_title"
        android:background="@drawable/text_bg"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="25dp" />

    <Button
        android:id="@+id/timeBtn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/section_name"
        android:layout_alignRight="@id/Sched_title"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/ripple_effect"
        android:text="select time"
        android:textSize="12dp" />

    <Button
        android:id="@+id/timeBtnEnd"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/timeBtn"
        android:layout_alignRight="@id/Sched_title"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/ripple_effect"
        android:text="select time"
        android:textSize="12dp" />

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/schedule_time_end"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/ripple_effect"
        android:text="SAVE"
        android:textSize="20dp" />


</RelativeLayout>