<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cover_horizontal"
    android:orientation="vertical"
    tools:context=".Register">

    <ImageView
        android:id="@+id/main_logo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/logo_round"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:id="@+id/title_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/main_logo"
        android:gravity="center"
        android:text="REGISTER"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />





    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email_reg"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_register"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:hint="Email"
        android:textColorHint="@color/Grey"
        app:endIconMode="clear_text"
        app:endIconTint="@color/Grey"
        app:startIconDrawable="@drawable/ic_baseline_email_24_black"
        app:startIconTint="@color/black">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email_reg1"
            android:backgroundTint="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/text_bg"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/schoolID_reg"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_reg"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:hint="Password"
        android:textColorHint="@color/Grey"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/Grey"
        app:startIconDrawable="@drawable/ic_baseline_lock_24_black"
        app:startIconTint="@color/black">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/schoolID_reg1"
            android:backgroundTint="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/text_bg"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/QR_GEN"
        android:layout_width="205dp"
        android:layout_height="195dp"
        android:layout_below="@+id/schoolID_reg"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:hint="Last Name"
        android:padding="10dp"
        android:paddingLeft="5dp"
        android:textColor="@color/black" />


    <Button
        android:id="@+id/register_btn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/QR_GEN"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"

        android:background="@drawable/ripple_effect"
        android:text="REGISTER"
        android:textSize="20dp" />


</RelativeLayout>