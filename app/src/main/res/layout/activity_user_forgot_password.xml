<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cover_horizontal"
    android:orientation="vertical"
    tools:context=".Register">

    <ImageView
        android:id="@+id/main_logo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/logo_round"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:id="@+id/title_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/main_logo"
        android:gravity="center"
        android:text="CHANGE PASSWORD"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />





    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email_fp"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_register"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:hint="Email"
        android:textColorHint="@color/Grey"
        app:endIconMode="clear_text"
        app:endIconTint="@color/Grey"
        app:startIconDrawable="@drawable/ic_baseline_email_24_black"
        app:startIconTint="@color/black">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email_fp1"
            android:backgroundTint="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/text_bg"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>


    <LinearLayout
        android:id="@+id/linearFP"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/email_fp"
        android:layout_marginTop="150dp">


        <EditText
            android:id="@+id/FPdigit1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLength="1"
            android:layout_weight="1"
            android:textSize="32sp"
            android:textAlignment="center"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:inputType="number"/>

        <EditText
            android:id="@+id/FPdigit2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLength="1"
            android:layout_weight="1"
            android:textSize="32sp"
            android:textAlignment="center"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:inputType="number"/>
        <EditText
            android:id="@+id/FPdigit3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLength="1"
            android:layout_weight="1"
            android:textSize="32sp"
            android:textAlignment="center"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:inputType="number"/>
        <EditText
            android:id="@+id/FPdigit4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLength="1"
            android:layout_weight="1"
            android:textSize="32sp"
            android:textAlignment="center"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:inputType="number"/>
    </LinearLayout>


    <Button
        android:id="@+id/send_code"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/linearFP"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/ripple_effect"
        android:text="SEND CODE"
        android:textColor="@color/black"
        android:textSize="20dp" />
    <Button
        android:id="@+id/validate_FP"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/send_code"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/ripple_effect"
        android:text="SUBMIT"
        android:visibility="invisible"
        android:textColor="@color/black"
        android:textSize="20dp" />




</RelativeLayout>