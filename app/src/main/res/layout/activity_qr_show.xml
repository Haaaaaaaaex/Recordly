<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QR_show"
    android:background="@drawable/cover_horizontal">
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="450dp"
        android:layout_height="75dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".27"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageView1" />

    <TextView
        android:id="@+id/title3"
        android:layout_width="450dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:paddingTop="15dp"

        android:scaleType="centerCrop"
        android:text="QR CODE"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".27"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/gone"
        android:layout_width="450dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:paddingTop="15dp"
        android:visibility="gone"
        android:scaleType="centerCrop"

        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".27"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/QR_acc"
        android:layout_width="250dp"
        android:layout_height="175dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp" />


    <Button
        android:id="@+id/downloadBtnQR"
        android:layout_width="160dp"
        android:layout_height="75dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="525dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_baseline_download_24_black"
        android:text="download"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/emailBtnQR"
        android:layout_width="160dp"
        android:layout_height="75dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="525dp"
        android:layout_toRightOf="@id/downloadBtnQR"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_baseline_send_24_black"
        android:text="TO EMAIL"
        android:textColor="@color/black" />


</RelativeLayout>