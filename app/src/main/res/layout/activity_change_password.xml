<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cover_horizontal"
    android:orientation="vertical"
    tools:context=".Register">

    <ImageView
        android:id="@+id/main_logo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/logo_round"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:id="@+id/title_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/main_logo"
        android:gravity="center"
        android:text="CHANGE PASSSWORD"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />





    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/oldpass"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_register"
        android:layout_centerInParent="true"
        android:layout_marginTop="90dp"
        android:hint="Enter old password"
        android:textColorHint="@color/Grey"
        app:endIconMode="password_toggle"

        app:endIconTint="@color/Grey"
        app:startIconDrawable="@drawable/ic_baseline_vpn_key_24_blue"
        app:startIconTint="@color/Blue">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/oldpass1"
            android:backgroundTint="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/text_bg"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/newpass"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/oldpass"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:hint="Enter new password"
        android:textColorHint="@color/Grey"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/Grey"
        app:startIconDrawable="@drawable/ic_baseline_lock_24_black"
        app:startIconTint="@color/black">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/newpass1"
            android:backgroundTint="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/text_bg"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/renewpass"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newpass"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:hint="Enter new password"
        android:textColorHint="@color/Grey"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/Grey"
        app:startIconDrawable="@drawable/ic_baseline_lock_24_black"
        app:startIconTint="@color/black">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/renewpass1"
            android:backgroundTint="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/text_bg"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/changepassBtn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/renewpass"
        android:textColor="@color/black"
        android:layout_centerInParent="true"
        android:layout_marginTop="70dp"
        android:background="@drawable/ripple_effect"
        android:text="CHANGE PASSWORD"
        android:textSize="20dp" />


</RelativeLayout>